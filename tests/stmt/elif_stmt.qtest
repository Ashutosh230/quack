%%describe
Supports formatting if statements
%%source
if 1 > 0 do console.writeline("One is greater than zero") elif true {-do nothing-}end

:- firstLabel
for i from 1 to 10 by 2
  for j from 1 to 10
    if (i = 3) and (j =~ 0)
      break firstLabel
    elif (i =~ 2)
      continue firstLabel
    end
  end
end
%%expect
if 1 > 0
  do console.writeline( "One is greater than zero" )
elif true
end
:- firstLabel
for i from 1 to 10 by 2
  for j from 1 to 10
    if (i = 3) and (j =~ 0)
      break firstLabel
    elif (i =~ 2)
      continue firstLabel
    end
  end
end
