%%describe
Supports formatting while statements
%%source
[myLabel]
while true break myLabel end
while true break end
let x :- 0
let succ :- &[m] -> &(+ 1)(m)
while x < 10
  do x :- succ(x)
  do console.write("X is: " + x)
end
%%expect
[myLabel]
while true
  break myLabel
end
while true
  break
end
let x :- 0
let succ :- &[m] -> &(+ 1)(m)
while x < 10
  do x :- succ(x)
  do console.write("X is: " + x)
end
