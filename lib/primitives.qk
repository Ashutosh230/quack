-- TODO: booleans should be ADTs
-- TODO: Deal with type recursion, such as Id :- Id

type Show :- %{
    to_string: &[] -> string
}

type Eq :- %{
    eq: &a -> boolean,
    diff: &a -> boolean,
    max: &a -> a,
    min: &a -> a
}

type Ord :- %{
    lt: &a -> boolean,
    gt: &a -> boolean,
    lte: &a -> boolean,
    gte: &a -> boolean
}

type Enum :- %{
    succ: &[] -> a,
    pred: &[] -> a
}

type Monoid :- %{
    empty: &[] -> a,
    concat: &a -> a
}

type Primitive :- Show & Eq & Ord

type String :- Primitive & Monoid
type Number :- Primitive & Enum & Monoid
type Bool   :- Primitive
type Unit   :- #()
